<div class="container">
  <div class="row flex-items-xs-around">
    <div class="plain-box col-xs-11 col-sm-10 col-md-8 text-xs-center">
      <%= image_tag current_gram.picture, class: 'img-fluid' %>
      <h2 class="gram-message"><%= current_gram.message %></h2>
    </div>
  </div>
  <% if current_user && current_user == current_gram.user %>
    <div class="row flex-items-xs-around">
      <div class="gram-actions col-xs-11 col-sm-10 col-md-8 text-xs-center">
        <%= link_to edit_gram_path(current_gram), class: 'btn btn-secondary' do %>
          <i class="fa fa-pencil" aria-hidden="true"></i> <span>Edit</span>
        <% end %>
        <%= link_to gram_path(current_gram), method: :delete, data: { confirm: 'Are you sure you want to delete this gram?' }, class: 'btn btn-danger' do %>
          <i class="fa fa-trash-o" aria-hidden="true"></i> <span>Delete</span>
        <% end %>
      </div>
    </div>
  <% end %>
  <div class="row flex-items-xs-around">
    <div class="comments-box plain-box col-xs-11 col-sm-8 col-md-6 text-xs-center">
      <h2 class="brand-header">Comments</h2>
      <hr />
      <% current_gram.comments.each do |comment| %>
        <div class="gram-comment">
          <%= simple_format(comment.message) %>
          <small><%= comment.user.email %> | <%= comment.created_at.strftime("%b %d, %Y") %></small>
        </div>
        <hr />
      <% end %>
      <h5>Leave a Comment</h5>
      <%= simple_form_for Comment.new, url: gram_comments_path(current_gram) do |f| %>
        <div class="form-inputs">
          <%= f.input :message, label: false %>
        </div>
        <div class="form-actions">
          <%= f.submit 'Submit', class:'btn btn-brand' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
