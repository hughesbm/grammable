<div class="jumbotron text-xs-center">
  <div class="col-xs-12">
    <h1 class="display-3">Share photos of food</h1>
    <br class="m-y-2">
  </div>
  <div class="col-xs-12">
    <p class="lead">You <i>could</i> also share street art or babies or lattes, but... it's mostly just food here.</p>
    <br class="m-y-2">
  </div>
  <div class="col-xs-12">
    <%= link_to 'Gram your Food!', new_gram_path, class: 'btn btn-brand btn-lg' %>
  </div>
</div>
<div class="container">
  <div class="row flex-items-xs-around">
    <% @grams.each do |gram| %>
      <div class="col-md-6 col-lg-4">
        <div class="gram-card card card-inverse text-xs-center">
          <%= link_to gram_path(gram) do %>
            <%= image_tag gram.picture.url(:square), class: "img-fluid card-img" %>
            <div class="gram-overlay card-img-overlay flex-items-xs-middle flex-items-xs-center">
              <div>
                <h3 class="card-title"><%= gram.message %></h3>
                <p class="card-text"><%= gram.created_at.strftime("Added %b %d, %Y") %></p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
